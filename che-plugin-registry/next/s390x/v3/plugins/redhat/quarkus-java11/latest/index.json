apiVersion: v2
publisher: redhat
name: quarkus-java11
version: latest
type: VS Code extension
displayName: Quarkus
title: Quarkus
description: Quarkus Tools for Visual Studio Code
icon: /images/redhat-vscode-quarkus-icon.png
category: Programming Languages
repository: https://github.com/redhat-developer/vscode-quarkus
firstPublicationDate: '2020-09-21'
latestUpdateDate: '2022-01-31'
spec:
  containers:
    - image: registry.redhat.io/codeready-workspaces/udi-openj9-rhel8:2.16
      name: vscode-quarkus
      volumes:
        - name: m2
          mountPath: /home/jboss/.m2
        - name: gradle
          mountPath: /home/jboss/.gradle
      memoryLimit: 3500Mi
      memoryRequest: 20Mi
      cpuRequest: 30m
      cpuLimit: 800m
      env:
        - name: CHE_THEIA_SIDECAR_PREFERENCES
          value: '{"java.server.launchMode":"Standard"}'
  extensions:
    - relative:extension/resources/download_jboss_org/jbosstools/vscode/stable/vscode-quarkus/vscode-quarkus-1.7.0-437.vsix
    - relative:extension/resources/download_jboss_org/jbosstools/vscode/stable/vscode-microprofile/vscode-microprofile-0.1.1-48.vsix
    - relative:extension/resources/download_jboss_org/jbosstools/static/jdt_ls/stable/java-0.82.0-369.vsix
    - relative:extension/resources/download_jboss_org/jbosstools/vscode/3rdparty/vscode-java-debug/vscode-java-debug-0.26.0.vsix
